CREATE TABLE TRACK (ID NUMBER(10) NOT NULL, AUTHOR VARCHAR NOT NULL, DURATION NUMBER(19) NOT NULL, NAME VARCHAR NOT NULL, ORIGIN VARCHAR NOT NULL, URL VARCHAR NOT NULL, PRIMARY KEY (ID))
CREATE TABLE PLAYLIST (ID NUMBER(10) NOT NULL, NAME VARCHAR NOT NULL, PRIMARY KEY (ID))
CREATE TABLE PLAYLIST_TRACKS (PLAYLIST_ID NUMBER(10) NOT NULL, TRACK_ID NUMBER(10) NOT NULL UNIQUE, PRIMARY KEY (PLAYLIST_ID, TRACK_ID))
ALTER TABLE PLAYLIST_TRACKS ADD CONSTRAINT FK_PLAYLIST_TRACKS_PLAYLIST_ID FOREIGN KEY (PLAYLIST_ID) REFERENCES PLAYLIST (ID)
ALTER TABLE PLAYLIST_TRACKS ADD CONSTRAINT FK_PLAYLIST_TRACKS_TRACK_ID FOREIGN KEY (TRACK_ID) REFERENCES TRACK (ID)
CREATE TABLE SEQUENCE (SEQ_NAME VARCHAR(50) NOT NULL, SEQ_COUNT NUMBER(19), PRIMARY KEY (SEQ_NAME))
